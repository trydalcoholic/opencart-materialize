<script>
	let materializeColorPicker = $('.materialize-color-picker'),
		toggleFilterLayout = $('#toggle-filter-layout'),
		mtFilterLayout = $('#mt-filter-layout'),
		tabCommonColor = $('#tab-common__color'),
		mtFilterHeaders = $('.materialize-filter-item.with-header, .materialize-filter-item--title'),
		mtFilterSliderSecondaryBackground = $('.materialize-filter--slider'),
		mtFilterSliderPrimaryBackground = $('.materialize-filter--slider-base__center, .materialize-filter--slider-base-bubble, .materialize-filter--slider-base-bubble--tooltip'),
		mtFilterSliderText = $('.materialize-filter--slider-base-bubble--tooltip span'),
		mtFilterApplyButton = $('#mt-filter-apply-button');

	materializeColorPicker.materializeColorPicker();

	toggleFilterLayout.click(function() {
		if (mtFilterLayout.hasClass('scale-out')) {
			mtFilterLayout.removeClass('scale-out').addClass('scale-in');
		} else {
			mtFilterLayout.removeClass('scale-in').addClass('scale-out');
		}
	});

	materializeColorPicker.change(function() {
		if (mtFilterLayout.hasClass('scale-out')) {
			mtFilterLayout.removeClass('scale-out').addClass('scale-in');

			setTimeout(function() {
				changeFilterLayout();
			}, 300);
		} else {
			setTimeout(function() {
				changeFilterLayout();
			}, 100);
		}

		function changeFilterLayout() {
			let data = {}, name;

			tabCommonColor.find($('[value ^= \'#\']')).each(function() {
				name = $(this).attr('name').replace(/\[|\]/g, '_');

				if (!data[name]) {
					data[name] = [];
				}

				data[name].push($(this).val());
			});

			console.log(data); /* todo-materialize Delete before release */

			mtFilterLayout.css({
				'background-color': data['module_mt_filter_settings_color__common__background__hex_'],
				'color': data['module_mt_filter_settings_color__common__text__hex_']
			});

			mtFilterHeaders.css({
				'background-color': data['module_mt_filter_settings_color__header__background__hex_'],
				'color': data['module_mt_filter_settings_color__header__text__hex_']
			});

			mtFilterSliderSecondaryBackground.css({
				'background-color': data['module_mt_filter_settings_color__slider__secondary_background__hex_']
			});

			mtFilterSliderPrimaryBackground.css({
				'background-color': data['module_mt_filter_settings_color__slider__primary_background__hex_']
			});

			mtFilterSliderText.css({
				'color': data['module_mt_filter_settings_color__slider__text__hex_']
			});

			mtFilterApplyButton.css({
				'background-color': data['module_mt_filter_settings_color__apply_button__background__hex_'],
				'color': data['module_mt_filter_settings_color__apply_button__text__hex_']
			});
		}
	});

	$('.languages li:first-child a').tab('show');

	if (localStorage.getItem('headerTab')) {
		$('.card-header-tabs li:eq(' + localStorage.getItem('headerTab') + ') a').tab('show');

		localStorage.removeItem('headerTab');
	}

	if (localStorage.getItem('navPills')) {
		navPillsStorage = JSON.parse(localStorage.getItem('navPills'));
		console.log(navPillsStorage);

		let getNavPills = $('.nav-pills').find('*[data-toggle=\'pill\'].active');

		$.each(getNavPills, function(index, value) {
			$(value).parent().find('*[data-toggle=\'pill\']:eq(' + navPillsStorage[index] + ')').tab('show');
		});

		localStorage.removeItem('navPills');
	}

	if (localStorage.getItem('mtFilterLayout')) {
		mtFilterLayout.removeClass('scale-out').addClass('scale-in');

		setTimeout(function() {
			changeFilterLayout();
		}, 300);

		localStorage.removeItem('mtFilterLayout');
	}

	let timer = null;

	jQuery(document).keydown(function(event) {
		if ((event.ctrlKey || event.metaKey) && event.which === 83) {
			event.preventDefault();

			if (timer) {
				clearTimeout(timer);
			}

			let form = $('#form-module'),
				loader = '<div id="mt-filter-loader" class="loader-wrapper"><div class="showbox"><div class="loader"><svg class="circular" viewBox="25 25 50 50"><circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/></svg></div></div></div>';

			timer = setTimeout(function() {
				let getHeaderTab = $('.card-header-tabs').find('*[data-toggle=\'tab\'].active').parent().index(),
					getNavPills = $('.nav-pills').find('*[data-toggle=\'pill\'].active'),
					navPills = {};

				$.each(getNavPills, function(index, value) {
					navPills[index] = $(value).index();
				});

				localStorage.setItem('headerTab', getHeaderTab);
				localStorage.setItem('navPills', JSON.stringify(navPills));

				if (mtFilterLayout.hasClass('scale-in')) {
					localStorage.setItem('mtFilterLayout', 'true');
				}

				form.css('opacity','0.3').before(loader).attr('action','{{ apply }}').submit();
			}, 200);

			return false;
		}
	});
</script>
