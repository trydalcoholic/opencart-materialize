{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<h1>{{ module_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid materialize-body">
		<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module">
			{% if error_warning %}
				<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
					<button type="button" class="close" data-dismiss="alert">&times;</button>
				</div>
			{% endif %}
			<div class="row">
				<div class="col-lg-4 col-xl-3 order-lg-1">
					<div class="card mb-3">
						<div class="card-header">{{ entry_status }}</div>
						<div class="card-body">
							<select name="module_mt_filter_status" id="input-status" class="material-select">
								{% if module_mt_filter_status %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
						<div class="card-footer">
							<div class="d-flex">
								<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn-material bg-light text-secondary waves-effect"><i class="fas fa-reply"></i> {{ button_cancel }}</a>
								<button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn-material waves-effect bg-primary text-white ml-auto"><i class="fas fa-save"></i> {{ button_save }}</button>
							</div>
						</div>
					</div>
					<ul id="mt-filter-layout" class="materialize-filter d-none d-lg-block d-xl-block scale-transition scale-out" style="background-color: {{ module_mt_filter_settings.color.common.background.hex }}">
						<li class="materialize-filter-item with-header" style="background-color: {{ module_mt_filter_settings.color.header.background.hex }}; color: {{ module_mt_filter_settings.color.header.text.hex }};"><h4>Materialize Filter</h4></li> {# todo-materialize Must be placed in a language variable #}
